<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item: Compras Invitado -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Compras Invitado" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Reservas Online -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Reservas Online" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Socio Cineplanet -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Socio Cineplanet" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Promociones -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Promociones" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Ventas Corporativas -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Ventas Corporativas" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Libro de Reclamaciones -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Libro de Reclamaciones" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Centro de Ayuda -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Centro de Ayuda" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Contacto -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Contacto" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Productos Permitidos -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Productos Permitidos" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Términos y Condiciones -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Términos y Condiciones" />
            <View style="@style/MoreOptionDivider" />

            <!-- Item: Configuraciones -->
            <TextView
                style="@style/MoreOptionItem"
                android:text="Configuraciones" />
            <View style="@style/MoreOptionDivider" />

            <!-- Redes Sociales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_facebook" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_instagram" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_youtube" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_twitter" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
